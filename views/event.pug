extends base

block content 
    section.event-page-container
        h2 Our events
        .event-section-main
            each event in events
                .event-section-single
                    .image-container
                        img.event-image-1(src="/img/9.jpg", alt="event name")
                    .text-container
                        h3=event.name 
                        h5= event.summary
                        .event-list-container
                            .locations
                                ion-icon.icon-small(name="navigate-circle-outline")
                                p=`${event.startLocation.description}`
                                
                            .locations
                                ion-icon.icon-small(name="calendar-outline")
                                p StartDates
                            .locations
                                ion-icon.icon-small(name="timer-outline")
                                p= `${event.duration} days`
                            .locations
                                ion-icon.icon-small(name="people-circle-outline")
                                p= `${event.duration} days`
                    .link-container
                        .locations.locations-second

                            .locations.locations-second-first
                                    ion-icon.icon-small(name="chatbubbles-outline")
                                    p=`${event.ratingsAverage} ( ${event.commentsQuantity} Ratings)`
                            .locations.locations-second-first
                                ion-icon.icon-small(name="chatbox-outline")
                                p=` ${event.commentsQuantity} Comments`
                        a.event-section-button(href=`/events/event/${event.slug}`) Read More